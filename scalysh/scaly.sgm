  <!DOCTYPE grammar SYSTEM "grammar.dtd">
  
  <grammar>

    <syntax id = Program                                        program
        <content identifier                                     property = name
        <content link = File                  multiple          property = files

    <syntax id = File                                           top
        <content link = Expression            multiple optional property = expressions

    <syntax id = Expression                   multiple abstract
        <content link = Block
        <content link = Assignment
        <content link = IdentifierExpression
        <content link = LiteralExpression

    <syntax id = Block                                          base = Expression
        <content link = leftCurly
        <content link = Expression            multiple          property = statements
        <content link = rightCurly

    <syntax id = Assignment                                     base = Expression
        <content link = set
        <content link = Expression            multiple          property = statements

    <syntax id = IdentifierExpression                           base = Expression
        <content identifier                                     property = name

    <syntax id = LiteralExpression                              base = Expression
        <content literal                                        property = literal

    <keyword id = set

    <punctuation id = leftCurly         value = "{"
    <punctuation id = rightCurly        value = "}"

  </grammar>
