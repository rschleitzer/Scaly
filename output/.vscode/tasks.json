{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ Aktive Datei kompilieren",
			"command": "/opt/homebrew/opt/llvm/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/scaly/io.cpp",
				"${workspaceFolder}/scaly/io/Console.cpp",
				"${workspaceFolder}/scaly/containers.cpp",
				"${workspaceFolder}/scaly/containers/Node.cpp",
				"${workspaceFolder}/scaly/containers/Node/Node.cpp",
				"${workspaceFolder}/scaly/containers/StringIterator.cpp",
				"${workspaceFolder}/scaly/containers/StringIterator/StringIterator.cpp",
				"${workspaceFolder}/scaly/containers/String.cpp",
				"${workspaceFolder}/scaly/containers/String/String.cpp",
				"${workspaceFolder}/scaly/containers/List.cpp",
				"${workspaceFolder}/scaly/containers/List/List.cpp",
				"${workspaceFolder}/scaly/containers/ListIterator.cpp",
				"${workspaceFolder}/scaly/containers/ListIterator/ListIterator.cpp",
				"${workspaceFolder}/scaly/memory.cpp",
				"${workspaceFolder}/scaly/memory/PageNode.cpp",
				"${workspaceFolder}/scaly/memory/PageNode/PageNode.cpp",
				"${workspaceFolder}/scaly/memory/Page.cpp",
				"${workspaceFolder}/scaly/memory/Page/Page.cpp",
				"${workspaceFolder}/scaly/memory/PageList.cpp",
				"${workspaceFolder}/scaly/memory/PageList/PageList.cpp",
				"${workspaceFolder}/scaly/memory/Object.cpp",
				"${workspaceFolder}/scaly/memory/Object/Object.cpp",
				"${workspaceFolder}/scaly/memory/Region.cpp",
				"${workspaceFolder}/scaly/memory/Region/Region.cpp",
				"${workspaceFolder}/scaly/memory/PageListIterator.cpp",
				"${workspaceFolder}/scaly/memory/PageListIterator/PageListIterator.cpp",
				"-o",
				"${workspaceFolder}/bin/scaly",
				//"`llvm-config --cxxflags --ldflags --system-libs --libs core`"
				"-I/opt/homebrew/Cellar/llvm/17.0.5/include",
				"-std=c++17",
				"-stdlib=libc++",
				"-D__STDC_CONSTANT_MACROS",
				"-D__STDC_FORMAT_MACROS",
				"-D__STDC_LIMIT_MACROS",
				"-L/opt/homebrew/Cellar/llvm/17.0.5/lib",
				"-Wl,-search_paths_first",
				"-Wl,-headerpad_max_install_names",
				"-lLLVM-17",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}