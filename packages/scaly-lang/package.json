{
  "name": "@scaly/lang",
  "version": "0.1.0",
  "description": "Scaly language core - lexer, parser, codegen",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "esbuild src/index.ts --bundle --format=iife --global-name=Scaly --outfile=dist/scaly.browser.js",
    "build:all": "npm run build && npm run build:browser",
    "test": "vitest run"
  },
  "dependencies": {
    "@scaly/containers": "*"
  },
  "devDependencies": {
    "esbuild": "^0.27.1"
  }
}
