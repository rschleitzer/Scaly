    ; ========================================================================
    ; Expression Emission
    ; ========================================================================

    ; Emit a sequence of operands (typically collapsed to single operand)
    function emit_operands(this, ops: ref[Vector[PlannedOperand]]?) returns LLVMValueRef
    {
        if ops = null
            return LLVMValueRef(null)

        if ops.length = 0
            return LLVMValueRef(null)

        ; After collapseOperandSequence, we typically have a single collapsed operand
        let first ops.get(0)
        if first = null
            return LLVMValueRef(null)

        emit_operand(first.unwrap())
    }

    ; Emit a single operand
    function emit_operand(this, op: PlannedOperand) returns LLVMValueRef
    {
        var value LLVMValueRef(null)

        ; Emit the expression
        choose op.expr
            when Constant: c
            {
                set value: emit_constant(c, op.result_type)
            }
            else
            {
                set value: emit_expression(op.expr)
            }

        ; Apply member access chain if present
        if op.member_access <> null
        {
            if op.member_access.length > 0
            {
                ; TODO: Handle member access chain
                ; For now, just return the base value
            }
        }

        value
    }

    ; Emit an expression
    function emit_expression(this, expr: PlannedExpression) returns LLVMValueRef
    {
        choose expr
            when Constant: c
            {
                ; Use void type as placeholder when no type info available
                let void_type PlannedType#(
                    Span(0, 0),
                    String#("void"),
                    String#("v"),
                    null,
                    scaly.compiler.Model.Lifetime.Unspecified(scaly.compiler.Model.UnspecifiedLifetime()),
                    null,
                    String#(""),
                    null
                )
                return emit_constant(c, void_type)
            }
            when Type: t
            {
                ; Type used as expression - error
                return LLVMValueRef(null)
            }
            when Variable: v
            {
                return emit_variable(v)
            }
            when GlobalRef: g
            {
                return emit_global_ref(g)
            }
            when Call: c
            {
                return emit_call(c)
            }
            when Tuple: t
            {
                return emit_tuple(t)
            }
            when Matrix: m
            {
                return emit_matrix(m)
            }
            when Block: b
            {
                return emit_block(b)
            }
            when If: i
            {
                return emit_if(i)
            }
            when Match: m
            {
                return emit_match(m)
            }
            when Choose: c
            {
                return emit_choose(c)
            }
            when For: f
            {
                return emit_for(f)
            }
            when While: w
            {
                return emit_while(w)
            }
            when Try: t
            {
                return emit_try(t)
            }
            when SizeOf: s
            {
                return emit_sizeof(s)
            }
            when AlignOf: a
            {
                return emit_alignof(a)
            }
            when Is: i
            {
                return emit_is(i)
            }
            when As: a
            {
                return emit_as(a)
            }
            when VariantConstruction: vc
            {
                return emit_variant_construction(vc)
            }
    }

    ; ========================================================================
    ; Variable and Global Reference Emission
    ; ========================================================================

    ; Emit a variable reference
    function emit_variable(this, variable: PlannedVariable) returns LLVMValueRef
    {
        let var_ptr lookup_variable(variable.name)
        if var_ptr.handle = null
            return LLVMValueRef(null)

        if variable.is_mutable
        {
            ; Mutable binding stored as pointer - load the value
            let ty map_type(variable.variable_type)
            return LLVMBuildLoad2(builder, ty, var_ptr, variable.name.c_data())
        }
        else
        {
            ; Immutable binding stored as value directly
            return var_ptr
        }
    }

    ; Emit a global reference
    function emit_global_ref(this, global: PlannedGlobalRef) returns LLVMValueRef
    {
        let gv LLVMGetNamedGlobal(llvm_module, global.mangled_name.c_data())
        if gv.handle = null
            return LLVMValueRef(null)

        ; Get pointer to first element
        ; TODO: Create proper GEP for array access
        gv
    }

    ; ========================================================================
    ; Call Emission
    ; ========================================================================

    ; Emit a function/operator call
    function emit_call(this, call: PlannedCall) returns LLVMValueRef
    {
        ; Check if this is an intrinsic operator
        if call.is_intrinsic
        {
            if call.is_operator
                return emit_intrinsic_operator(call)
            else
                return emit_intrinsic_function(call)
        }

        ; Look up the function
        var func lookup_function_cache(call.mangled_name)
        if func.handle = null
        {
            ; Try to find it in the module
            set func: LLVMGetNamedFunction(llvm_module, call.mangled_name.c_data())
            if func.handle = null
                return LLVMValueRef(null)
        }

        ; Build arguments
        ; For now, handle simple case without arguments
        if call.args = null
        {
            let result_type map_type(call.result_type)
            let func_type LLVMFunctionType(result_type, null as pointer[LLVMTypeRef], 0, 0)
            return LLVMBuildCall2(builder, func_type, func, null as pointer[LLVMValueRef], 0, "call")
        }

        if call.args.length = 0
        {
            let result_type map_type(call.result_type)
            let func_type LLVMFunctionType(result_type, null as pointer[LLVMTypeRef], 0, 0)
            return LLVMBuildCall2(builder, func_type, func, null as pointer[LLVMValueRef], 0, "call")
        }

        ; TODO: Emit arguments and create proper call
        ; For now, return null for calls with arguments
        LLVMValueRef(null)
    }

    ; ========================================================================
    ; Intrinsic Operator Emission
    ; ========================================================================

    ; Emit an intrinsic operator call
    function emit_intrinsic_operator(this, call: PlannedCall) returns LLVMValueRef
    {
        if call.args = null
            return LLVMValueRef(null)

        let arg_count call.args.length

        ; Unary operators
        if arg_count = 1
        {
            let arg call.args.get(0)
            if arg = null
                return LLVMValueRef(null)
            let operand emit_operand(arg.unwrap())
            return emit_intrinsic_unary_op(call.name, operand, call.result_type)
        }

        ; Binary operators
        if arg_count = 2
        {
            let left_arg call.args.get(0)
            let right_arg call.args.get(1)
            if left_arg = null
                return LLVMValueRef(null)
            if right_arg = null
                return LLVMValueRef(null)

            let left emit_operand(left_arg.unwrap())
            let right emit_operand(right_arg.unwrap())
            return emit_intrinsic_binary_op(call.name, left, right, call.result_type)
        }

        LLVMValueRef(null)
    }

    ; Emit an intrinsic unary operator
    function emit_intrinsic_unary_op(this, op_name: String, operand: LLVMValueRef, result_type: PlannedType) returns LLVMValueRef
    {
        let ty map_type(result_type)
        let is_float is_floating_point_type(result_type)

        ; Negation
        if op_name.equals(String#("-"))
        {
            if is_float
                return LLVMBuildFNeg(builder, operand, "fneg")
            return LLVMBuildNeg(builder, operand, "neg")
        }

        ; Unary plus (identity)
        if op_name.equals(String#("+"))
            return operand

        ; Logical not
        if op_name.equals(String#("!"))
            return LLVMBuildNot(builder, operand, "not")

        ; Bitwise not
        if op_name.equals(String#("~"))
            return LLVMBuildNot(builder, operand, "bitnot")

        ; Dereference
        if op_name.equals(String#("*"))
            return LLVMBuildLoad2(builder, ty, operand, "deref")

        ; Address-of (operand should already be a pointer)
        if op_name.equals(String#("&"))
            return operand

        LLVMValueRef(null)
    }

    ; Emit an intrinsic binary operator
    function emit_intrinsic_binary_op(this, op_name: String, left: LLVMValueRef, right: LLVMValueRef, result_type: PlannedType) returns LLVMValueRef
    {
        let ty map_type(result_type)
        let is_float is_floating_point_type(result_type)
        let is_signed is_signed_type(result_type)

        ; Addition
        if op_name.equals(String#("+"))
        {
            if is_float
                return LLVMBuildFAdd(builder, left, right, "fadd")
            return LLVMBuildAdd(builder, left, right, "add")
        }

        ; Subtraction
        if op_name.equals(String#("-"))
        {
            if is_float
                return LLVMBuildFSub(builder, left, right, "fsub")
            return LLVMBuildSub(builder, left, right, "sub")
        }

        ; Multiplication
        if op_name.equals(String#("*"))
        {
            if is_float
                return LLVMBuildFMul(builder, left, right, "fmul")
            return LLVMBuildMul(builder, left, right, "mul")
        }

        ; Division
        if op_name.equals(String#("/"))
        {
            if is_float
                return LLVMBuildFDiv(builder, left, right, "fdiv")
            if is_signed
                return LLVMBuildSDiv(builder, left, right, "sdiv")
            return LLVMBuildUDiv(builder, left, right, "udiv")
        }

        ; Modulo
        if op_name.equals(String#("%"))
        {
            if is_float
                return LLVMBuildFRem(builder, left, right, "frem")
            if is_signed
                return LLVMBuildSRem(builder, left, right, "srem")
            return LLVMBuildURem(builder, left, right, "urem")
        }

        ; Bitwise AND
        if op_name.equals(String#("&"))
            return LLVMBuildAnd(builder, left, right, "and")

        ; Bitwise OR
        if op_name.equals(String#("|"))
            return LLVMBuildOr(builder, left, right, "or")

        ; Bitwise XOR
        if op_name.equals(String#("^"))
            return LLVMBuildXor(builder, left, right, "xor")

        ; Left shift
        if op_name.equals(String#("<<"))
            return LLVMBuildShl(builder, left, right, "shl")

        ; Right shift
        if op_name.equals(String#(">>"))
        {
            if is_signed
                return LLVMBuildAShr(builder, left, right, "ashr")
            return LLVMBuildLShr(builder, left, right, "lshr")
        }

        ; Comparison operators
        if op_name.equals(String#("="))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.OEQ(), left, right, "eq")
            return LLVMBuildICmp(builder, LLVMIntPredicate.EQ(), left, right, "eq")
        }

        if op_name.equals(String#("<>"))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.ONE(), left, right, "ne")
            return LLVMBuildICmp(builder, LLVMIntPredicate.NE(), left, right, "ne")
        }

        if op_name.equals(String#("<"))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.OLT(), left, right, "lt")
            if is_signed
                return LLVMBuildICmp(builder, LLVMIntPredicate.SLT(), left, right, "lt")
            return LLVMBuildICmp(builder, LLVMIntPredicate.ULT(), left, right, "lt")
        }

        if op_name.equals(String#("<="))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.OLE(), left, right, "le")
            if is_signed
                return LLVMBuildICmp(builder, LLVMIntPredicate.SLE(), left, right, "le")
            return LLVMBuildICmp(builder, LLVMIntPredicate.ULE(), left, right, "le")
        }

        if op_name.equals(String#(">"))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.OGT(), left, right, "gt")
            if is_signed
                return LLVMBuildICmp(builder, LLVMIntPredicate.SGT(), left, right, "gt")
            return LLVMBuildICmp(builder, LLVMIntPredicate.UGT(), left, right, "gt")
        }

        if op_name.equals(String#(">="))
        {
            if is_float
                return LLVMBuildFCmp(builder, LLVMRealPredicate.OGE(), left, right, "ge")
            if is_signed
                return LLVMBuildICmp(builder, LLVMIntPredicate.SGE(), left, right, "ge")
            return LLVMBuildICmp(builder, LLVMIntPredicate.UGE(), left, right, "ge")
        }

        LLVMValueRef(null)
    }

