{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "clang++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/../scaly/memory/PageNode.ll",
				"${workspaceFolder}/../scaly/memory/PageListIterator.ll",
				"${workspaceFolder}/../scaly/memory/PageList.ll",
				"${workspaceFolder}/../scaly/memory/Page.ll",
				"${workspaceFolder}/../scaly/memory/Region.ll",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}",
				//"`llvm-config --cxxflags --ldflags --system-libs --libs core`"
				"-I/opt/homebrew/Cellar/llvm/17.0.5/include",
				"-std=c++17",
				"-stdlib=libc++",
				"-D__STDC_CONSTANT_MACROS",
				"-D__STDC_FORMAT_MACROS",
				"-D__STDC_LIMIT_MACROS",
				"-L/opt/homebrew/Cellar/llvm/17.0.5/lib",
				"-Wl,-search_paths_first",
				"-Wl,-headerpad_max_install_names",
				"-lLLVM-17",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}