define Region
(
    page: pointer[Page]
)
{
    init() {
        set page: null
    }

    deinit() {
        if (page <> null)
        {
            page*.deallocate_extensions()
            page*.forget()
        }
    }

    function get_page(this: Region): pointer[Page] {
        if this.page = null
            set this.page: Page.allocate_page()
        return this.page
    }
}